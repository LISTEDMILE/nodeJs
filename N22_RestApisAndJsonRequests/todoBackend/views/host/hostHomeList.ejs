<%- include('../partials/head')%>
<link rel="stylesheet" href="/style.css"/>
    <body>
      <%- include('../partials/nav')%>
        <div id="body">
    <div id="div">
        <h1 id="top">Here are the added homes..</h1>
        <div >
        <% details.forEach(function(detail) { %>
            <li>
                <h1 id="name">
                    <%= detail.houseName %>
                    
                </h1>
                <h1 id="name">
                    <%= detail.housePrice %>
                    
                </h1>
                <h1 id="name">
                    <%= detail.houseLocation %>
                    
                </h1>
                <p id="textarea">
                    <%= detail.description %>
                </p>
                <!--here ?editing =true ka matlab h jaise params me koi value bhejte the aise hi kuch var bhi bhej skte h jaise yha editing=true bheja h-->
                <a href="/host/editHome/<%= detail._id%>?editing=true"> Edit</a>
                <form action="/host/deleteHome/<%=detail._id%>" method='POST'>
                    <button type="submit">
                        Delete
                    </button>
                </form>
                <img src="<%=detail.photo %> " alt="House Image" id="image"/>  
            </li>
          
        <% });%>
    </div>
    
    
        <p> from / <b><u> test </u></b>/addHome</p>
    </div>
</div>
